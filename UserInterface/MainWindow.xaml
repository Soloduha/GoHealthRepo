                <Label Content="Новий запис" Grid.Column="0" Grid.Row="0"
                       Grid.ColumnSpan="3" FontSize="30" FontWeight="Bold"
                       VerticalAlignment="Bottom" Foreground="DarkSlateGray"/>
                <Label Content="Прізвище:  " Grid.Column="0" Grid.Row="2"
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Right" Foreground="DarkSlateGray"
                       VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <Label Content="Ім`я:  " Grid.Column="0" Grid.Row="3"
                       FontSize="18" FontWeight="Bold" Foreground="DarkSlateGray"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center" Grid.ColumnSpan="2" />
                <Label Content="По-батькові:  " Grid.Column="0" Grid.Row="4"
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Right" Foreground="DarkSlateGray"
                       VerticalAlignment="Center" Grid.ColumnSpan="2" />
                <Label Content="Дат. народ.:  " Grid.Column="0" Grid.Row="5"
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Right" Foreground="DarkSlateGray"
                       VerticalAlignment="Center" Grid.ColumnSpan="2" />
                <Label Content="Лікар:  " Grid.Column="0" Grid.Row="7"
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Right" Foreground="DarkSlateGray"
                       VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <Label Content="Дата:  " Grid.Column="0" Grid.Row="8"
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Right" Foreground="DarkSlateGray"
                       VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <ComboBox x:Name="SurnamesComboBox" IsTextSearchEnabled="True"
                          Grid.Column="2" Grid.Row="2" Width="200"
                          Height="30" HorizontalAlignment="Left"
                          IsEditable="True" VerticalContentAlignment="Center"
                          TextSearch.TextPath="Surname" 
                          FontSize="18"
                          StaysOpenOnEdit="True"
                          SelectionChanged="SurnamesComboBox_SelectionChanged">
                    <ComboBox.Background>
                        <SolidColorBrush Color="White" Opacity="0.6"/>
                    </ComboBox.Background>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Foreground="DarkSlateGray">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1} {2}">
                                        <Binding Path="Surname" />
                                        <Binding Path="Name" />
                                        <Binding Path="ThirdName" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBox x:Name="NewReceptionNameTextBox" Grid.Column="2" Grid.Row="3"
                         Height="30" Width="200" HorizontalAlignment="Left" FontSize="18"
                         VerticalContentAlignment="Center">
                    <TextBox.Background>
                        <SolidColorBrush Color="White" Opacity="0.6"/>
                    </TextBox.Background>
                </TextBox>
                <TextBox x:Name="NewReceptionPoBatkoviTextBox" Grid.Column="2" Grid.Row="4"
                         Height="30" Width="200" HorizontalAlignment="Left" FontSize="18"
                         VerticalContentAlignment="Center">
                    <TextBox.Background>
                        <SolidColorBrush Color="White" Opacity="0.6"/>
                    </TextBox.Background>
                </TextBox>
                <DatePicker x:Name="BirthDayOfPatient" Grid.Column="2" Grid.Row="5"
                            VerticalAlignment="Center" Width="200"
                            HorizontalAlignment="Left" >
                    <DatePicker.Background>
                        <SolidColorBrush Color="White" Opacity="0.6"/>
                    </DatePicker.Background>
                </DatePicker>
                <Label Content="Час:  " Grid.Column="0" Grid.Row="9"
                       FontSize="18" FontWeight="Bold"
                       HorizontalAlignment="Right" Foreground="DarkSlateGray"
                       VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                <TextBox x:Name="TimeOfReceptionTextBox" Grid.Column="2" Grid.Row="9"
                         Height="35" Width="200" HorizontalAlignment="Left" FontSize="20"
                         VerticalContentAlignment="Center">
                    <TextBox.Background>
                        <SolidColorBrush Color="White" Opacity="0.6"/>
                    </TextBox.Background>
                </TextBox>
                <ComboBox x:Name="DoctorsComboBox"
                          Grid.Column="2" 
                          Grid.Row="7" IsEditable="True"
                          Height="30" Width="200"
                          HorizontalAlignment="Left"
                          VerticalContentAlignment="Center"
                          SelectionChanged="DoctorsComboBox_SelectionChanged">
                    <ComboBox.Background>
                        <SolidColorBrush Color="White" Opacity="0.6"/>
                    </ComboBox.Background>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Foreground="DarkSlateGray">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1} {2}">
                                        <Binding Path="Surname" />
                                        <Binding Path="Name" />
                                        <Binding Path="ThirdName" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <DatePicker x:Name="DateOfReception" Grid.Column="2" Grid.Row="8"
                            VerticalAlignment="Center" Width="200"
                            HorizontalAlignment="Left"/>                
                <ListView x:Name="DoctorScheduleListView" Grid.Column="3" Grid.ColumnSpan="2"
                          Grid.Row="1" Grid.RowSpan="8" Margin="30" BorderBrush="DarkSlateGray">
                    <ListView.Background>
                        <SolidColorBrush Color="White" Opacity="0.8"/>
                    </ListView.Background>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Поч." Width="50"/>
                            <GridViewColumn Header="Кін." Width="50"/>
                            <GridViewColumn Header="Пацієнт" Width="180"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Button x:Name="OkNewReceptionButton"
                        Content="Добавити"
                        Grid.Column="3" Grid.Row="9" 
                        Style="{StaticResource AllButtonsStyle}"
                        Click="OkNewReceptionButton_Click"/>
                <Button x:Name="ClearAllFieldsButton"
                        Content="Очистити"
                        Grid.Column="4" Grid.Row="9"
                        Style="{StaticResource AllButtonsStyle}"
                        Click="ClearAllFieldsButton_Click"/>
            </Grid>
            <Grid x:Name="AllReceptionsGrid" Visibility="Collapsed" Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="Images/Doctor3.jpg" Stretch="UniformToFill"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Rectangle Height="30"/>
                    <Label Content="Лікар: " Width="190" 
                           Foreground="DarkSlateGray" FontWeight="Bold"/>
                    <ComboBox x:Name="DoctorsReceptionsComboBox" Width="190" IsEditable="True"
                              IsReadOnly="True"
                              SelectionChanged="DoctorsReceptionsComboBox_SelectionChanged">
                        <ComboBox.Background>
                            <SolidColorBrush Color="White" Opacity="0.6"/>
                        </ComboBox.Background>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Foreground="DarkSlateGray">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1} {2}">
                                            <Binding Path="Surname" />
                                            <Binding Path="Name" />
                                            <Binding Path="ThirdName" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Label Content="Дата: " Width="190"
                           Foreground="DarkSlateGray" FontWeight="Bold"/>
                    <DatePicker x:Name="DateInReceptionsGrid" Width="190"/>
                </StackPanel>
                <ListView Grid.Column="1" Width="400" Height="400">
                    <ListView.Background>
                        <SolidColorBrush Color="White" Opacity="0.6"/>
                    </ListView.Background>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Час" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding TimeOfReception}" IsEnabled="True" BorderBrush="Transparent"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Пацієнт">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding FullName}" IsEnabled="True" BorderBrush="Transparent"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
            <Grid x:Name="ProfileDoctorGrid" Visibility="Collapsed" 
                  Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="Images/medicalBackground.png" Stretch="Fill"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <StackPanel.Background>
                        <SolidColorBrush Color="#FF032741" Opacity="0.5"/>
                    </StackPanel.Background>
                    <Rectangle Height="35"/>
                    <Ellipse Height="100" Width="100">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="Images/MaleProfileIcon.png" Stretch="Fill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock x:Name="ProfileNameTextBlock"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontSize="16" FontWeight="Bold"
                               Text="Имя"/>
                    <TextBlock x:Name="ProfileSurnameTextBlock"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontSize="16" FontWeight="Bold"
                               Text="Фамилия"/>
                    <TextBlock x:Name="ProfileThirdnameTextBlock"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontSize="16" FontWeight="Bold"
                               Text="Отчество"/>
                    <Rectangle Height="50"/>
                    <Button x:Name="WorkProfileButton"
                        Content="Робота"
                        Style="{StaticResource PropertyTriggerStyle1}"
                        Click="WorkProfileButton_Click"/>
                    <Button x:Name="ClientsProfileButton"
                        Content="Пацієнти"
                        Style="{StaticResource PropertyTriggerStyle1}"
                        Click="ClientsProfileButton_Click"/>
                    <Button x:Name="OwnScheduleButton"
                        Content="Розклад"
                        Style="{StaticResource PropertyTriggerStyle1}"
                        Click="OwnScheduleButton_Click"/>
                    <Button x:Name="DoctorReceptionsButton"
                        Content="Прийоми"
                        Style="{StaticResource PropertyTriggerStyle1}"
                        Click="DoctorReceptionsButton_Click"/>
                </StackPanel>
                <Grid x:Name="ProfileSubGrid" Grid.Column="1" Grid.ColumnSpan="2">
                    <Grid x:Name="ProfileWorkGrid" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                            <ColumnDefinition Width="10"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="130"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="e-mail: " Opacity="0.9"
                               FontSize="23" FontWeight="Bold" Foreground="White"/>
                        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="Моб.тел.: "
                               FontSize="23" FontWeight="Bold" Opacity="0.9" Foreground="White"/>                        
                        <Label Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="Місто: "
                               FontSize="23" FontWeight="Bold" Opacity="0.9" Foreground="White"/>
                        <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="Відділ: "
                               FontSize="23" FontWeight="Bold" Opacity="0.9" Foreground="White"/>
                        <Label x:Name="ProfileGridEMailLabel" Grid.Column="2" Grid.Row="1"
                               HorizontalAlignment="Left" FontSize="23" FontWeight="Bold" 
                               Content="qqq@ukr.net" Opacity="0.9" Foreground="White" VerticalAlignment="Center"/>
                        <Label x:Name="ProfileGridMobileLabel" Grid.Column="2" Grid.Row="2"
                               HorizontalAlignment="Left" FontSize="23" FontWeight="Bold" 
                               Content="+380" Opacity="0.9" Foreground="White" VerticalAlignment="Center"/>
                        <Label x:Name="ProfileGridCityLabel" Grid.Column="2" Grid.Row="3"
                               HorizontalAlignment="Left" FontSize="23" FontWeight="Bold" 
                               Content="Rivne" Opacity="0.9" Foreground="White" VerticalAlignment="Center"/>
                        <Label x:Name="ProfileGridDepartmentLabel" Grid.Column="2" Grid.Row="4"
                               HorizontalAlignment="Left" FontSize="23" FontWeight="Bold" 
                               Content="відділ" Opacity="0.9" Foreground="White" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid x:Name="ProfileClientsGrid" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"></ColumnDefinition>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch">
                            <GridSplitter.Background>
                                <SolidColorBrush Color="#FF124D95" Opacity="0.5"/>
                            </GridSplitter.Background>
                        </GridSplitter>
                        <ListView x:Name="DoctorClients" Grid.Column="0" Height="300">
                            <ListView.Background>
                                <SolidColorBrush Color="White" Opacity="0.2"/>
                            </ListView.Background>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock x:Name="FullNameTextBlock">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} + {1} + {2}">
                                                <Binding Path="Name" />
                                                <Binding Path="Surname" />
                                                <Binding Path="ThirdName"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListView>
                        <ListView x:Name="PatientDiseaseHistory" Grid.Column="2">
                            <ListView.Background>
                                <SolidColorBrush Color="White" Opacity="0.1"/>
                            </ListView.Background>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <GroupBox Header="{Binding Date}" Width="150">
                                        <TextBlock Text="{Binding Disease, StringFormat=Хвороба: {0}}"/>                                        
                                    </GroupBox>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    <Grid x:Name="ProfileScheduleGrid" Visibility="Collapsed">
                        
                    </Grid>
                    <Grid x:Name="ProfileReceptionsGrid" Visibility="Collapsed">
                        
                    </Grid>
                </Grid>                    
            </Grid>            
        </Grid>
    </Grid>
</Window>