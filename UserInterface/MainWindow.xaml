                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding FullName}" IsEnabled="True" BorderBrush="Transparent"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
            <Grid x:Name="ProfileDoctorGrid" Grid.Row="1" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="110"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Ellipse Grid.Column="0" Grid.Row="0" Height="90" 
                         Width="90" HorizontalAlignment="Right">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="Images/profilephoto.png" Stretch="Fill"/>
                    </Ellipse.Fill>
                </Ellipse>
                <StackPanel Grid.Column="1" Grid.Row="0"
                            Orientation="Vertical"
                            Width="200" Height="80">
                    <TextBlock x:Name="ProfileNameTextBlock"
                               Foreground="DarkGray"
                               FontSize="20" FontWeight="Bold"
                               Text="Имя"/>
                    <TextBlock x:Name="ProfileSurnameTextBlock"
                               Foreground="DarkGray"
                               FontSize="20" FontWeight="Bold"
                               Text="Фамилия"/>
                    <TextBlock x:Name="ProfileThirdnameTextBlock"
                               Foreground="DarkGray"
                               FontSize="20" FontWeight="Bold"
                               Text="Отчество"/>
                </StackPanel>
                <Button x:Name="WorkProfileButton"
                        Grid.Column="0"
                        Grid.Row="1"
                        Content="Робота"
                        Style="{StaticResource PropertyTriggerStyle1}"
                        Click="WorkProfileButton_Click"/>
                <Button x:Name="ClientsProfileButton"
                        Grid.Column="1"
                        Grid.Row="1"
                        Content="Пацієнти"
                        Style="{StaticResource PropertyTriggerStyle1}"
                        Click="ClientsProfileButton_Click"/>
                <Button x:Name="OwnScheduleButton"
                        Grid.Column="2"
                        Grid.Row="1"
                        Content="Розклад"
                        Style="{StaticResource PropertyTriggerStyle1}"
                        Click="OwnScheduleButton_Click"/>                
                <Grid x:Name="ProfileSubGrid" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2">
                    <Grid x:Name="ProfileWorkGrid" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                            <ColumnDefinition Width="10"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="e-mail: "
                               FontSize="23" FontWeight="Bold" Foreground="DarkGray"/>
                        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="Моб.тел.: "
                               FontSize="23" FontWeight="Bold" Foreground="DarkGray"/>                        
                        <Label Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="Місто: "
                               FontSize="23" FontWeight="Bold" Foreground="DarkGray"/>
                        <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right"
                               VerticalAlignment="Center" Content="Відділ: "
                               FontSize="23" FontWeight="Bold" Foreground="DarkGray"/>
                        <Label x:Name="ProfileGridEMailLabel" Grid.Column="2" Grid.Row="1"
                               HorizontalAlignment="Left" FontSize="23" FontWeight="Bold" 
                               Content="qqq@ukr.net" Foreground="DarkGray"/>
                        <Label x:Name="ProfileGridMobileLabel" Grid.Column="2" Grid.Row="2"
                               HorizontalAlignment="Left" FontSize="23" FontWeight="Bold" 
                               Content="+380" Foreground="DarkGray"/>
                        <Label x:Name="ProfileGridCityLabel" Grid.Column="2" Grid.Row="3"
                               HorizontalAlignment="Left" FontSize="23" FontWeight="Bold" 
                               Content="Rivne" Foreground="DarkGray"/>
                        <Label x:Name="ProfileGridDepartmentLabel" Grid.Column="2" Grid.Row="4"
                               HorizontalAlignment="Left" FontSize="23" FontWeight="Bold" 
                               Content="відділ" Foreground="DarkGray"/>
                    </Grid>
                    <Grid x:Name="ProfileClientsGrid" Visibility="Visible">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"></GridSplitter>
                        <ListView x:Name="DoctorClients" Grid.Column="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock x:Name="FullNameTextBlock">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} + {1} + {2}">
                                                <Binding Path="Name" />
                                                <Binding Path="Surname" />
                                                <Binding Path="ThirdName"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListView>
                        <ListView x:Name="PatientDiseaseHistory" Grid.Column="2">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <GroupBox Header="{Binding Date}">
                                        <TextBlock Text="{Binding Disease, StringFormat=Хвороба: {0}}"/>                                        
                                    </GroupBox>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    <Grid x:Name="ProfileScheduleGrid" Visibility="Collapsed">
                        
                    </Grid>
                </Grid>                    
            </Grid>
            
        </Grid>
    </Grid>
</Window>